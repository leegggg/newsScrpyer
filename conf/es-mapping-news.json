{
    "settings": {
        "index.mapping.total_fields.limit": 20000,
        "number_of_replicas": 0,
        "number_of_shards": 1,

        "analysis": {
            "analyzer": {
                "default": {
                    "type": "ik_smart",
                    "tokenizer": "ik_smart"
                },
                "url": {
                    "type": "custom",
                    "tokenizer": "path_hierarchy"
                }
            }
        }
    },
    "mappings": {
        "page": {
            "properties": {
                "timestampScrpy": {
                    "type": "date",
                    "format": "epoch_second"
                },
                "title": {
                    "type": "text"
                },
                "content": {
                    "type": "text"
                },
                "url": {
                    "type": "text",
                    "analyzer": "url",
                    "search_analyzer": "url"
                },
                "meta": {
                    "type": "nested",
                    "properties": {
                        "keywords": {
                            "type": "text",
                            "analyzer": "ik_smart"
                        }
                    }
                },
                "links": {
                    "type": "nested",
                    "properties": {
                        "title": {
                            "type": "text",
                            "analyzer": "ik_smart"
                        },
                        "url": {
                            "type": "text",
                            "analyzer": "url",
                            "search_analyzer": "url"
                        }
                    }
                }
            }
        }
    }
}